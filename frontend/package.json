{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prebdd": "mkdir -p reports",
    "bdd": "cucumber-js --require 'tests/bdd/**/*.cjs' 'tests/resources/**/*.feature' --format progress --format message:reports/report.ndjson && node scripts/generate-cucumber-report.cjs",
